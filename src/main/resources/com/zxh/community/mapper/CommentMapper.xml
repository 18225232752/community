<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zxh.community.mapper.CommentMapper">
    <sql id="commentInsertColumn">
        user_id,
        entity_type,
        entity_id,
        target_id,
        content,
        status,
        create_time
    </sql>
    <sql id="commentAllColumn">
        id,
        <include refid="commentInsertColumn"/>
    </sql>

    <select id="selectCommentsByEntity" resultType="comment">
        select
        <include refid="commentAllColumn"/>
        from comment
        where status = 0
          and entity_type = #{entityType}
          and entity_id = #{entityId}
        order by create_time
                limit #{offset}, #{limit}
    </select>

    <select id="selectCountByEntity" resultType="int">
        select count(id)
        from comment
        where status = 0
          and entity_type = #{entityType}
          and entity_id = #{entityId}
    </select>

    <insert id="insertComment">
        insert into comment(<include refid="commentInsertColumn"/>)
            values (#{userId}, #{entityType}, #{entityId}, #{targetId}, #{content}, #{status}, #{createTime})
    </insert>

    <select id="selectCommentById" resultType="comment">
        select
        <include refid="commentAllColumn"/>
        from comment
        where id = #{id}
    </select>
</mapper>