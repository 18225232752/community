<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zxh.community.mapper.DiscussPostMapper">
    <sql id="discussPostInsertColumn">
        user_id,
        title,
        content,
        type,
        status,
        create_time,
        comment_count,
        score
    </sql>
    <sql id="discussPostAllColumn">
        id,
        <include refid="discussPostInsertColumn"/>
    </sql>

    <select id="selectDiscussPosts" resultType="discussPost">
        select
        <include refid="discussPostAllColumn"/>
        from discuss_post
                where status != 2
        <if test="userId != 0">
            and user_id = #{userId}
        </if>
        order by type desc, create_time desc
                limit #{offset}, #{limit}
    </select>

    <select id="selectDiscussPostRows" resultType="int">
        select count(id)
        from discuss_post
                where status != 2
        <if test="userId != 0">
            and user_id = #{userId}
        </if>
    </select>

    <insert id="insertDiscussPost" keyProperty="id">
        insert into discuss_post (<include refid="discussPostInsertColumn"/>)
            values (#{userId}, #{title}, #{content}, #{type}, #{status}, #{createTime}, #{commentCount}, #{score})
    </insert>

    <select id="selectDiscussPostById" resultType="discussPost">
        select <include refid="discussPostAllColumn"/>
        from discuss_post
        where id = #{id}
    </select>
</mapper>